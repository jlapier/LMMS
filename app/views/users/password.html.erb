<h2>Change Password for: <%= @user.login %></h2>

<div class="sp_content">

  <%= error_messages_for 'user' %>

  <% form_for :user, @user, :url => { :action => "update_password", :id => @user } do |f| -%>
  <table>
    <tr>
      <td>New Password:</td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td>Again to verify:</td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
  </table>
  <p><%= submit_tag 'Save new password' %></p>
  <% end -%>

</div>