<h3>Quiz questions for <%= @quiz_page.title %></h3>

<div class="edit_content_box">
  <ol>
  <% for quiz_question in @quiz_questions %>
    <li>
      <strong><%=h quiz_question.title %>:</strong>
      <%=h quiz_question.body %><br/>
      <em>Explanation:</em> <%=h quiz_question.explanation %><br/>
      <ol>Answers:
        <li class="correct_answer"><%= quiz_question.correct_answer.body %></li>
        <% for quiz_answer in quiz_question.quiz_answers.select { |qa| qa != quiz_question.correct_answer } %>
          <li class="incorrect_answer"><%= quiz_answer.body %></li>
        <% end %>
      </ol>
      [<%= link_to 'Edit this question', edit_learning_module_section_quiz_page_quiz_question_path(@learning_module,
              @section, @quiz_page, quiz_question) %> |
      <%= link_to 'Delete this question', learning_module_section_quiz_page_quiz_question_path(@learning_module,
              @section, @quiz_page, quiz_question), :confirm => 'Are you sure you want to delete this question?',
              :method => :delete %>]
    </li>
  <% end %>
  </ol>

  <br />

  <p>
    <%= link_to 'Create a new quiz question', new_learning_module_section_quiz_page_quiz_question_path %> |
    <%= link_to 'Go back to this quiz page', learning_module_section_quiz_page_path(@learning_module, @section, @quiz_page) %>
  </p>
</div>