<h1>Users</h1>

<div class="sp_content">

  <table class="nice_table">
    <tr>
      <th>Login</th>
      <th>Email</th>
      <th>Password</th>
    </tr>

  <% for user in @users %>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.email %></td>
      <td>[<%= link_to 'Reset Password', :action => 'password', :id => user %>]</td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'Create new user', new_user_path %>
</div>